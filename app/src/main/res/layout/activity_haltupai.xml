<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".haltupai">

    <TextView
        android:id="@+id/txttupai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/_125z"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="50sp"

    />

    <ImageView
        android:id="@+id/imgtupai"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/tupai"
        />


    <TextView
        android:id="@+id/extupai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/perihal_spesifikasi_motor_ini_sudah_dilengkapi_dengan_mesin_2_tak_berkapasitas_dengan_sistem_berpendingin_udara_mesin_ini_dapat_menghasilkan_tenaga_maksimum_sebesar_17_5_horse_power_pada_8000rpm"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#191970"
        />

    <TextView
        android:id="@+id/costtupai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="IDR.40.000.000,00"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="#191970"
        />


    <Button
        android:id="@+id/sharebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share"
        android:layout_marginTop="20dp"
        android:textSize="20sp"

        />

</LinearLayout>