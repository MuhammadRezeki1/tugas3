<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B0C4DE"
    tools:context=".halninja">

    <TextView
        android:id="@+id/txtninja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/ninja150"
        android:textStyle="bold"
        android:textSize="50sp"
        android:textAlignment="center"

        />

    <ImageView
        android:id="@+id/imgnin"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:src="@drawable/ninjaa"
        />


    <TextView
        android:id="@+id/explnin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kapasitas_150_cc_jenis_mesin_2_stroke_sohc_diameter_x_langkah_59_mm_x_54_4_mm_rasio_kompresi_6_8_1_pipa_knalpot_single_exhaust_katup_per_silinder_2_k"
        android:textSize="20dp"
        android:textColor="#191970"
        android:textAlignment="center"
        android:textStyle="bold"
        />

        <TextView
            android:id="@+id/costnin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IDR.30.000.000,00"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="#191970"
            />


    <Button
        android:id="@+id/sharebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="#C71585"


        />



</LinearLayout>