<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8FBC8F"
    tools:context=".GSX">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/gsx"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/txgsx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GSX 150"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="#483D8B"
        android:padding="10dp"
        android:background="#E6E6FA"
        />

    <TextView
        android:id="@+id/exgsx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kapasitas_147_3_cc_tenaga_maksimal_18_9_hpkatup_per_silinder_4_konfigurasi_katup_dohc_diameter_x_langkah_62_mm_x_48_8_mm_rasio_kompresi_11_5_1_kecepatan_maksimum_137_kmph"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="#4B0082"
        android:background="#E6E6FA"
        android:padding="20dp"

        />

    <Button
        android:id="@+id/gsxbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:backgroundTint="#C71585"
        />

</LinearLayout>