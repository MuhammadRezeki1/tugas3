<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8FBC8F"
    tools:context=".rlima">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:src="@drawable/r15"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="R15"
        android:textStyle="bold"
        android:textSize="50sp"
        android:textColor="#800000"
        android:textAlignment="center"

        />
    <TextView
        android:id="@+id/rlima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kapasitas_155_09_cc_tenaga_maksimal_19_04_hp_konfigurasi_katup_sohc_jenis_mesin_single_cylinder_4_valve_4_stroke_liquid_cooled"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:padding="20dp"
        android:background="#E0FFFF"
        android:textColor="#800000"
        />

    <Button
        android:id="@+id/sharebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="@string/share"
        android:backgroundTint="#C71585"

        />


</LinearLayout>